<%= form_for @user do |f| %>
  Choose an username: <%= f.text_field :username, placeholder: "user123" %><br /><br />
  Provide your email: <%= f.email_field :email, placeholder: "something@example.domain" %><br /><br />
  Set a password: <%= f.password_field :password, placeholder: "******" %><br /><br />
  <%= f.submit("Create") %>
<% end %>